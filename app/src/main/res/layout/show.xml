<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <TextView
            android:id="@+id/materialtext"
            android:layout_width="229dp"
            android:layout_height="43dp"
            android:layout_below="@+id/img2"
            android:layout_alignStart="@+id/img2"
            android:layout_alignLeft="@+id/img2"
            android:layout_alignEnd="@+id/img2"
            android:layout_alignRight="@+id/img2"
            android:layout_marginStart="122dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="-223dp"
            android:layout_marginRight="-223dp"
            android:text="Nome Material" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>