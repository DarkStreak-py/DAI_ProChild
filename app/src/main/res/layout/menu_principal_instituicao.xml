<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_PrincipalInstituicao">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1DFDF"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center">

        <ImageButton
            android:id="@+id/btnconta"
            android:layout_width="76dp"
            android:layout_height="65dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/user_img_foreground" />

        <ImageButton
            android:id="@+id/btn_eventos"
            android:layout_width="76dp"
            android:layout_height="65dp"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnconta"
            app:srcCompat="@mipmap/calendario" />

        <ImageButton
            android:id="@+id/btn_direitos"
            android:layout_width="123dp"
            android:layout_height="130dp"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_materiais"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/rights_round" />

        <ImageButton
            android:id="@+id/btnforum"
            android:layout_width="123dp"
            android:layout_height="141dp"
            android:layout_marginEnd="58dp"
            android:layout_marginRight="58dp"
            android:layout_marginBottom="506dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/forum_round" />

        <ImageButton
            android:id="@+id/btn_materiais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dp"
            android:background="#E1DFDF "
            app:layout_constraintBottom_toTopOf="@+id/btnconta"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/materiais_foreground" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>