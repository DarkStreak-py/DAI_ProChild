<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DFDF"
    tools:context=".DireitoIntermedio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_direitos5"
            android:layout_width="160dp"
            android:layout_height="151dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="235dp"
            android:layout_marginRight="235dp"
            android:background="#E1DFDF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:srcCompat="@drawable/ver_foreground" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="295dp"
            android:layout_marginRight="295dp"
            android:layout_marginBottom="142dp"
            android:text="Ver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_direitos5" />

        <ImageButton
            android:id="@+id/btn_direitos3"
            android:layout_width="160dp"
            android:layout_height="151dp"
            android:layout_marginStart="204dp"
            android:layout_marginLeft="204dp"
            android:layout_marginTop="192dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:background="#E1DFDF"
            app:layout_constraintEnd_toStartOf="@+id/btnforum"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lixo_foreground" />

        <ImageButton
            android:id="@+id/btn_direitos4"
            android:layout_width="160dp"
            android:layout_height="151dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="192dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:background="#E1DFDF"
            app:layout_constraintEnd_toStartOf="@+id/btnforum"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/adic_foreground" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:text="Inserir"
            app:layout_constraintEnd_toEndOf="@+id/btn_direitos4"
            app:layout_constraintStart_toStartOf="@+id/btn_direitos4"
            app:layout_constraintTop_toTopOf="@+id/btn_direitos4" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:text="Eliminar"
            app:layout_constraintEnd_toEndOf="@+id/btn_direitos3"
            app:layout_constraintStart_toStartOf="@+id/btn_direitos3"
            app:layout_constraintTop_toTopOf="@+id/btn_direitos3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@color/purple_500" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:background="@color/purple_500"
        android:src="@drawable/abc_vector_test" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direitos"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_anchor="@+id/spinner3"
        app:layout_anchorGravity="center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
